@page
@model TaskTjRJ.Model.Assunto
@{
    ViewData["Title"] = "Cadastro de Assunto";
}
<h1>@ViewData["Title"]</h1>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>      
        <div class=”editor-label”>@Html.LabelFor(x => x.Descricao)</div>
        <div class=”editor-field”>@Html.EditorFor(x => x.Descricao) @Html.ValidationMessageFor(x => x.Descricao)</div>

      


    </fieldset>
}